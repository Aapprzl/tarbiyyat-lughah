rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Materials folder - Admin can write, public can read
    match /materials/{allPaths=**} {
      allow read: if true; // Public can read materials
      allow write: if request.auth != null && request.auth.token.email == 'icalaprizal23072003@gmail.com';
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
