rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'icalaprizal23072003@gmail.com';
    }
    
    // Materials folder - Admin can write, public can read
    match /materials/{allPaths=**} {
      allow read: if true; // Public can read materials
      allow write: if isAdmin();
    }
    
    // Profile folder - Admin can write, public can read
    match /profile/{allPaths=**} {
      allow read: if true; // Public can read profile photos/CV
      allow write: if isAdmin();
    }
    
    // Copyright folder - Admin can write, public can read
    match /copyright/{allPaths=**} {
      allow read: if true; // Public can read copyright documents
      allow write: if isAdmin();
    }
    
    // Identity folder - Admin can write, public can read (logos, branding)
    match /identity/{allPaths=**} {
      allow read: if true; // Public can read logos/branding
      allow write: if isAdmin();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
